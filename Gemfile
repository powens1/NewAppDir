#Gemfile contains a list of gems and versions your app depends on
#the preferred place to download any necessary gems is https://rubygems.org, which is where the Ruby community registers "production ready" gems
source 'https://rubygems.org'
#which version of the Ruby language interpreter is required
ruby '2.3.0'

#we need version 1.4 or later of the sinatra gem
gem 'sinatra', '>= 1.4'

#some gems are only necessary in certain environments
group :development do
  gem 'rerun'
end